        {% for row in grid %}
            <tr>
                {% for cell in row %}
                    <td class="{{ cell }} {{ winner }} " width="50px" height="50px"><center class="{{ cell }}">&nbsp; {{ cell }}&nbsp; </center></td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>